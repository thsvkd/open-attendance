// This is your Prisma schema file,
// learn more about it in the docs: https://pris.ly/d/prisma-schema

generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider = "sqlite"
  url      = env("DATABASE_URL")
}

model User {
  id            String    @id @default(cuid())
  name          String?
  email         String?   @unique
  emailVerified DateTime?
  image         String?
  password      String?   // For credentials provider if needed
  role          String    @default("USER") // ADMIN, USER
  joinDate      DateTime? // Join date (nullable - not set until admin configures)
  country       String?   // Country code for holiday calculation (ISO 3166-1 alpha-2, e.g., "KR", "US")

  // Annual Leave Info
  totalLeaves   Float     @default(0)  // Total annual leave (default 0 days until joinDate is set)
  usedLeaves    Float     @default(0)  // Used annual leave
  
  accounts      Account[]
  sessions      Session[]
  attendances   Attendance[]
  leaveRequests LeaveRequest[]

  createdAt     DateTime  @default(now())
  updatedAt     DateTime  @updatedAt
}

model Account {
  id                 String  @id @default(cuid())
  userId             String
  type               String
  provider           String
  providerAccountId  String
  refresh_token      String?
  access_token       String?
  expires_at         Int?
  token_type         String?
  scope              String?
  id_token           String?
  session_state      String?

  user User @relation(fields: [userId], references: [id], onDelete: Cascade)

  @@unique([provider, providerAccountId])
}

model Session {
  id           String   @id @default(cuid())
  sessionToken String   @unique
  userId       String
  expires      DateTime
  user         User     @relation(fields: [userId], references: [id], onDelete: Cascade)
}

model VerificationToken {
  identifier String
  token      String   @unique
  expires    DateTime

  @@unique([identifier, token])
}

model Attendance {
  id        String    @id @default(cuid())
  userId    String
  date      DateTime  // Work date (excluding time)
  
  checkIn   DateTime? // Check-in time
  checkOut  DateTime? // Check-out time
  
  // Location data for check-in
  checkInLatitude   Float?
  checkInLongitude  Float?
  checkInDistance   Float?   // Distance from company location in meters
  checkInWifiSsid   String?  // Connected WiFi SSID at check-in
  checkInWifiBssid  String?  // Connected WiFi BSSID at check-in
  
  // Location data for check-out
  checkOutLatitude  Float?
  checkOutLongitude Float?
  checkOutDistance  Float?   // Distance from company location in meters
  checkOutWifiSsid  String?  // Connected WiFi SSID at check-out
  checkOutWifiBssid String?  // Connected WiFi BSSID at check-out
  
  status    String    @default("PRESENT") // PRESENT, ABSENT, LEAVE, HOLIDAY
  note      String?   // Remarks (e.g., late reason)

  user      User      @relation(fields: [userId], references: [id], onDelete: Cascade)

  createdAt DateTime  @default(now())
  updatedAt DateTime  @updatedAt

  @@unique([userId, date]) // A user has only one attendance record per day
}

model LeaveRequest {
  id        String      @id @default(cuid())
  userId    String
  type      String      @default("ANNUAL") // ANNUAL, SICK, OFFICIAL, OTHER
  leaveType String      @default("FULL_DAY") // FULL_DAY, HALF_DAY_AM, HALF_DAY_PM, QUARTER_DAY

  startDate DateTime
  endDate   DateTime
  startTime String? // For quarter day leave (e.g., "09:00")
  endTime   String? // For quarter day leave (e.g., "11:00")
  days      Float       // 사용 일수 (1, 0.5, 0.25)
  effectiveDays Float?   // Effective days after excluding holidays/weekends (nullable for backwards compatibility)
  
  reason    String?
  status    String      @default("PENDING") // PENDING, APPROVED, REJECTED, CANCELLED
  
  approvedBy String?    // Approver ID
  rejectedReason String?

  user      User        @relation(fields: [userId], references: [id], onDelete: Cascade)

  createdAt DateTime    @default(now())
  updatedAt DateTime    @updatedAt
}

model Holiday {
  id        String   @id @default(cuid())
  date      DateTime @unique
  name      String
  isPaid    Boolean  @default(true)
}

// Company location settings for location-based attendance
model CompanyLocation {
  id                String   @id @default(cuid())
  name              String   @default("Company Office")
  latitude          Float
  longitude         Float
  radius            Float    @default(100) // Allowed radius in meters (default 100m)
  address           String?  // Human-readable address
  
  // Registered WiFi networks for additional verification
  registeredWifiNetworks RegisteredWifiNetwork[]
  
  isActive          Boolean  @default(true)
  createdAt         DateTime @default(now())
  updatedAt         DateTime @updatedAt
  
  @@index([isActive])
}

// Registered WiFi networks for location verification
model RegisteredWifiNetwork {
  id                String          @id @default(cuid())
  companyLocationId String
  ssid              String          // WiFi network name
  bssid             String?         // WiFi MAC address (more precise)
  
  companyLocation   CompanyLocation @relation(fields: [companyLocationId], references: [id], onDelete: Cascade)
  
  createdAt         DateTime        @default(now())
  
  @@unique([companyLocationId, ssid])
}

// QR code authentication sessions for web check-in/out
model AttendanceSession {
  id                String    @id @default(cuid())
  userId            String
  sessionToken      String    @unique // Unique token for QR code
  action            String    // "CHECK_IN" or "CHECK_OUT"
  status            String    @default("PENDING") // PENDING, VERIFIED, EXPIRED, FAILED

  // Location data submitted via mobile
  latitude          Float?
  longitude         Float?
  wifiSsid          String?
  wifiBssid         String?

  expiresAt         DateTime  // Session expiration time
  verifiedAt        DateTime? // When the session was verified

  createdAt         DateTime  @default(now())
  updatedAt         DateTime  @updatedAt

  @@index([sessionToken])
  @@index([userId, status])
  @@index([expiresAt])
}
