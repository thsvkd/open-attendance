// This is your Prisma schema file,
// learn more about it in the docs: https://pris.ly/d/prisma-schema

generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider = "sqlite"
  url      = env("DATABASE_URL")
}

model User {
  id            String    @id @default(cuid())
  name          String?
  email         String?   @unique
  emailVerified DateTime?
  image         String?
  password      String?   // For credentials provider if needed
  role          String    @default("USER") // ADMIN, USER
  joinDate      DateTime  @default(now()) // 입사일
  
  // Annual Leave Info
  totalLeaves   Float     @default(15) // 총 연차 (기본 15일)
  usedLeaves    Float     @default(0)  // 사용한 연차
  
  accounts      Account[]
  sessions      Session[]
  attendances   Attendance[]
  leaveRequests LeaveRequest[]

  createdAt     DateTime  @default(now())
  updatedAt     DateTime  @updatedAt
}

model Account {
  id                 String  @id @default(cuid())
  userId             String
  type               String
  provider           String
  providerAccountId  String
  refresh_token      String?
  access_token       String?
  expires_at         Int?
  token_type         String?
  scope              String?
  id_token           String?
  session_state      String?

  user User @relation(fields: [userId], references: [id], onDelete: Cascade)

  @@unique([provider, providerAccountId])
}

model Session {
  id           String   @id @default(cuid())
  sessionToken String   @unique
  userId       String
  expires      DateTime
  user         User     @relation(fields: [userId], references: [id], onDelete: Cascade)
}

model VerificationToken {
  identifier String
  token      String   @unique
  expires    DateTime

  @@unique([identifier, token])
}

model Attendance {
  id        String    @id @default(cuid())
  userId    String
  date      DateTime  // 근무 날짜 (시간 제외)
  
  checkIn   DateTime? // 출근 시간
  checkOut  DateTime? // 퇴근 시간
  
  status    String    @default("PRESENT") // PRESENT, ABSENT, LEAVE, HOLIDAY
  note      String?   // 비고 (지각 사유 등)

  user      User      @relation(fields: [userId], references: [id], onDelete: Cascade)

  createdAt DateTime  @default(now())
  updatedAt DateTime  @updatedAt

  @@unique([userId, date]) // 한 유저는 하루에 하나의 출석 기록만 가짐
}

model LeaveRequest {
  id        String      @id @default(cuid())
  userId    String
  type      String      @default("ANNUAL") // ANNUAL, SICK, OFFICIAL, OTHER
  leaveType String      @default("FULL_DAY") // FULL_DAY, HALF_DAY_AM, HALF_DAY_PM, QUARTER_DAY

  startDate DateTime
  endDate   DateTime
  startTime String? // For quarter day leave (e.g., "09:00")
  endTime   String? // For quarter day leave (e.g., "11:00")
  days      Float       // 사용 일수 (1, 0.5, 0.25)
  
  reason    String?
  status    String      @default("PENDING") // PENDING, APPROVED, REJECTED, CANCELLED
  
  approvedBy String?    // 승인자 ID
  rejectedReason String?

  user      User        @relation(fields: [userId], references: [id], onDelete: Cascade)

  createdAt DateTime    @default(now())
  updatedAt DateTime    @updatedAt
}

model Holiday {
  id        String   @id @default(cuid())
  date      DateTime @unique
  name      String
  isPaid    Boolean  @default(true)
}
