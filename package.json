{
  "name": "open-attendance",
  "version": "0.1.0",
  "private": true,
  "scripts": {
    "dev": "node scripts/start-app.js",
    "build": "next build",
    "start": "node scripts/start-app.js --prod",
    "lint": "eslint",
    "db:init": "node scripts/init-db.js",
    "db:update-annual-leave": "tsx scripts/update-annual-leave.ts",
    "test": "vitest run --bail 1",
    "test:watch": "vitest",
    "test:ui": "vitest --ui",
    "test:coverage": "vitest run --coverage --bail 1",
    "test:e2e": "playwright install --with-deps && playwright test",
    "test:e2e:ui": "playwright install --with-deps && playwright test --ui",
    "test:e2e:headed": "playwright install --with-deps && playwright test --headed",
    "test:e2e:stop-on-failure": "playwright install --with-deps && STOP_ON_FAILURE=true playwright test",
    "test:all": "npm run test && npm run test:e2e",
    "test:build": "next build",
    "prepare": "husky"
  },
  "lint-staged": {
    "*.{ts,tsx,js,jsx}": "eslint --fix",
    "*.{ts,tsx,css,md}": "prettier --write"
  },
  "dependencies": {
    "@hookform/resolvers": "^5.2.2",
